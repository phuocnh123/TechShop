@model List<Infrastructure.Bills.BillCreateViewModel>
<div class="page-container">

    <div class="page-content">

        <div class="container-fluid">
            <div class="row">

                <div class="col-md-12">

                    <!-- BEGIN EXAMPLE TABLE PORTLET-->
                    <div class="portlet light">
                        <div class="portlet-title">

                            <div class="caption col-md-12">
                                <span class="caption-subject font-green-sharp bold uppercase">
                                    Danh sách hóa đơn
                                </span>
                            </div>
                        </div>

                        <div class="table-responsive col-md-12">
                            <table class="table table-bordered table-hover table-striped table-responsive">
                                <thead>
                                    <tr class="text-center">
                                        <td>Customer Name</td>
                                        <td>Address</td>
                                        <td>TotalAmount</td>
                                        <td>Payment Method</td>
                                        <td>PhoneNumber</td>
                                        <td>Utilites</td>
                                    </tr>
                                </thead>
                                <tbody id="table-content">
                                    @foreach (var item in Model)
                                    {
                                        <tr class="text-center">

                                            <td> @item.LastName @item.FirstName</td>
                                            <td> @item.Address</td>
                                            <td> @item.TotalAmount</td>
                                            <td> @item.PaymentMethod</td>
                                            <td> @item.PhoneNumber</td>

                                            <td class="text-center">

                                                <a class="btn default btn-xs purple" href="/" title="Update"> <span class="glyphicon glyphicon-edit"></span></a>

                                                <a class="btn default btn-xs green" href="/" title="Watch Images"><span class="glyphicon glyphicon-list-alt"></span></a>

                                                <a class="btn default btn-xs red" href="/" title="Delete">  <span class="glyphicon glyphicon-trash"></span></a>

                                            </td>

                                        </tr>
                                    }
                                </tbody>

                            </table>
                            <div class="pagination" id="pagination"></div>
                        </div>


                    </div>

                </div>

            </div>

        </div>
        <!--Modal arear-->
    </div>
</div>

