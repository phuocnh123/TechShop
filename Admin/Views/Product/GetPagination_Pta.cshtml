@model List<Infrastructure.Products.ProductViewModel>

@foreach (var item in Model)
{
    <tr class="text-center">

        <td> @item.Name</td>
        <td> @item.CategoryName</td>
        <td> @item.Price</td>
        <td> @item.DiscountPrice</td>
        <td> @item.Quantity</td>

        <td class="text-center">

            <a class="btn default btn-xs purple" href="@Url.Action("Update", "Product", new { productId = item.Id, CategoryId = item.CategoryId } )" title="Update"> <span class="glyphicon glyphicon-edit"></span></a>

            <a class="btn default btn-xs green" href="@item.Image" title="Watch Images"><span class="glyphicon glyphicon-list-alt"></span></a>

            <a class="btn default btn-xs red" href="@Url.Action("RemoveProduct", "Product", new { productId = item.Id })" title="Delete"><span class="glyphicon glyphicon-trash"></span></a>

        </td>
       
    </tr>
}
