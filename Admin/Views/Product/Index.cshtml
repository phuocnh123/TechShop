@section script{
    <script src="~/js/product/index.js"></script>
}
@model List<Infrastructure.Categories.CategoryViewModel>
<div class="page-container">

    <div class="page-content">

        <div class="container-fluid">
            <div class="row">

                <div class="col-md-12">

                    <!-- BEGIN EXAMPLE TABLE PORTLET-->
                    <div class="portlet light">
                        <div class="portlet-title">

                            <div class="caption col-md-12">
                                <span class="caption-subject font-green-sharp bold uppercase">
                                    Quản lý khóa học
                                </span>
                            </div>

                            <div class="portlet-body">

                                <div class="table-toolbar">

                                    <div class="col-md-3 col-sm-12 col-xs-12 pull-left">
                                        <a class="btn btn-success" href="/product/create" data-toggle="modal" id="btn-add">Tạo mới</a>

                                    </div>
                                    <div class="form-group col-md-3 col-xs-12">
                                        
                                        <select class="form-control" id="categoryId" name="CategoryId">
                                            <option value="">All</option>
                                            @foreach (var item in Model)
                                            {
                                                <option value="@item.Id">@item.Name</option>
                                            }

                                        </select>
                                    </div>

                                    <div class="form-group col-md-3 col-xs-12">
                                        <input placeholder="enter the keyword" class="form-control" id="keyword" />
                                    </div>

                                    <div class="col-md-3 col-xs-12">
                                        
                                        <button id="btn-search" class="btn btn-success">Search</button>
                                    </div>

                                </div>

                            </div>
                        </div>

                        <div class="table-responsive col-md-12">
                            <table class="table table-bordered table-hover table-striped table-responsive">
                                <thead>
                                    <tr class="text-center">
                                        <td>Product Name</td>
                                        <td>Category</td>
                                        <td>Price</td>
                                        <td>Discount Price</td>
                                        <td>Quantity</td>
                                        <td>Utilites</td>

                                    </tr>
                                </thead>
                                <tbody id="table-content">
                                    @*partial view*@
                                </tbody>

                            </table>
                            <div class="pagination" id="pagination"></div>
                        </div>


                    </div>

                </div>

            </div>

        </div>
        <!--Modal arear-->

 

    </div>
</div>

